# Test Environment Configuration
# This file is used for integration tests

# Database - Use SQLite file for tests (shared between app and tests)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/whatsapp_digest_test

# Debug mode for tests
DEBUG=true
LOG_LEVEL=DEBUG

# Test API keys (not real ones)
OPENAI_API_KEY=test-openai-key-12345
TELEGRAM_BOT_TOKEN=test-telegram-token-12345

# Test Redis (in-memory or local)
REDIS_URL=redis://localhost:6379/1
REDIS_ENABLED=true

# Test settings
SECRET_KEY=test-secret-key-for-testing-only
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance settings for tests
MAX_WORKERS=2
MAX_PROCESS_WORKERS=1
CACHE_TTL_DEFAULT=60
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Data cleanup settings for tests
CLEANUP_OLD_MESSAGES_DAYS=1
CLEANUP_OLD_SYSTEM_LOGS_DAYS=1
CLEANUP_COMPLETED_TASKS_HOURS=1

# WhatsApp settings for tests
WHATSAPP_SESSION_PATH=./whatsapp_sessions_test

# Test flags
SKIP_ASYNC_PROCESSOR=true
USE_OPTIMIZED_REPOSITORIES=true

# Admin settings for tests
ADMIN_PASSWORD=test-admin-password

# CORS for tests
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://test.localhost
